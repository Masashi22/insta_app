<li id="micropost-<%= micropost.id%>">
  <%= link_to image_tag(user.gravatar_url), micropost.user %>
  <span class="user"><%= link_to micropost.user.username, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %>前.
    <% if current_user == micropost.user %>
      <%= link_to "delete", micropost, method: :delete, data: { confirm: "削除しますか？" } %>
    <% end %>
  </span>
</li>
