<span class="content">
  <%= image_tag @micropost.picture.thumb.url  if @micropost.picture? %>
</span>
<div class="user">
  <%= link_to @micropost.user.username, @micropost.user %>
</div>
<div>
  <%= @micropost.content %>
</div>
<span class="timestamp">
  Posted <%= time_ago_in_words(@micropost.created_at) %>前.
  <% if current_user == @micropost.user %>
    <%= link_to "delete", micropost_path, method: :delete, data: { confirm: "削除しますか？" } %>
  <% end %>
</span>
