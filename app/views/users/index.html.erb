<%= provide(:title, "全ユーザー") %>
<h1>ユーザー一覧</h1>
<dl class="searchbox">
  <%= search_form_for(@search, url: users_path) do |f| %>
    <dt><%= f.text_field :username_cont, placeholder: "検索する人を入力" %></dt>
    <dd><%= f.submit ("検索"), class: "search-btn" %></dd>
  <% end %>
</dl>
<ul class="users">
  <% @search_user.each do |user| %>
    <li>
      <%= image_tag user.gravatar_url %>
      <%= link_to user.username, user_path(user) %>
    </li>
  <% end %>
</ul>
<%= paginate @users %>
